{% extends 'base.html.twig' %}

{% block body %}
    <div class="d-flex justify-content-between w-100">
        <!-- Formulario -->
        <div class="w-50 me-3">
            <h1>Sortu Bilera</h1>



            {{ form_start(form) }}
            <div class="container mt-4">
                <div class="row">
                    <!-- Columna izquierda: Izena, Lekua, Sortu -->
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_row(form.Izena, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.Lekua, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="mt-4">
                            {{ form_row(form.Sortu, {'attr': {'class': 'btn btn-primary'}}) }}
                        </div>
                    </div>

                    <!-- Columna derecha: Data -->
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_row(form.Data, {'attr': {'class': 'form-control js-datepicker'}}) }}
                        </div>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}

            {% for message in app.flashes('success') %}
                <div class="alert alert-success w-50 mt-2">
                    {{ message }}
                </div>
            {% endfor %}
        </div>

        <!-- Tabla -->
        <div class="w-50 mt-4">
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>Izena</th>
                    <th>Lekua</th>
                    <th>Data</th>
                    <th>Acciones</th>
                </tr>
                </thead>
                <tbody>
                {% for bilera in bilerak %}
                    <tr>
                        <td>{{ bilera.izena }}</td>
                        <td>{{ bilera.lekua }}</td>
                        <td>{{ bilera.data|date('Y-m-d') }}</td>
                        <td>
                            <form method="post" action="{{ path('app_admin_bilera_delete', {id: bilera.id}) }}" onsubmit="return confirm('¿Seguro que quieres eliminar esta bilera?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ bilera.id) }}">
                                <button class="btn btn-danger btn-sm">Borrar</button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center">No hay bilerak disponibles.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Selecciona solo el campo específico con la clase js-datepicker
            const dateField = document.querySelector('.js-datepicker');
            if (dateField) {
                flatpickr(dateField, {
                    minDate: 'today',
                    dateFormat: 'Y-m-d',
                });
            }
        });


    </script>
{% endblock %}
